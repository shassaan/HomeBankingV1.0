    function drawChart() {


        //var data = google.visualization.arrayToDataTable([
        //    ['Day', 'Expenses'],
        //    ['15 March', 400],
        //    ['30 March', 460],
        //    ['15 April', 1120],
        //    ['30 April', 540]
        //]);

        let data = [];


        fetch("https://localhost:44347/Home/GetExpenseReport?criteria=day")
            .then(res => {
                if (res.ok) {
                    res.json().then(d => {
                        console.log(d);
                        data = google.visualization.arrayToDataTable(d);
                        var options = {
                            title: 'Expenses',
                            curveType: 'function',
                            legend: { position: 'bottom' }
                        };

                        var chart = new google.visualization.LineChart(document.getElementById('curve_chart'));

                        chart.draw(data, options);
                    })
                }
            });


    }
</script>

