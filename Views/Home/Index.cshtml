                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <hr />

                    <div class="row accBottom">
                        <div class="col-sm-6" style="color:#3880e0;">
                            Credit Lines
                        </div>

                        <div class="col-sm-6" style="">
                            <a href="#" style="color:black;    margin-left: 316px;" id="toggler3">
                                <img src="~/Assets/add.png" style="width:25px;height:25px;" />
                            </a>
                        </div>
                        <div class="row" style="display:none;" id="depositTableToggler3">
                            <div class="col-sm-12">
                                <table class="table">
                                    <tr>
                                        <th>Date</th>
                                        <th>Concept</th>
                                        <th>Amount</th>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <hr />

                </div>
            </div>
        </div>

        <div class="col-sm-4 mt-10" style="padding:35px;background: white;border-radius: 25px;text-align:center;/* padding: 10px; */left: 32px;">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <img src="@Model.user.picture" class="img-circle" style="width:150px;border-radius:82px; height:150px;" alt="Alternate Text" />
                        <h5>@Model.user.name</h5>
                        <p>@Model.user.country,@Model.user.city</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5>56</h5>
                        <p class="text-muted">Operations</p>
                    </div>

                    <div class="col-md-6">
                        <h5>+$@Model.deposits.Sum(a => a.amount)</h5>
                        <p class="text-muted">Amount</p>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <h5>
                        Expense Report
                    </h5>
                    <div id="curve_chart" style="width: 900px; height: 400px"></div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <h5 style="text-align:left;">
                            Recent Activity
                        </h5>
                        <hr />

                        <table class="table table-condensed">
                            <tr>
                                <td><p style="color:dodgerblue">@Model.espenses[0].date.Value.ToString("MMMM")</p></td>
                            </tr>
                            @foreach (var expense in Model.espenses)
                            {
                                <tr>
                                    <td><p class="text-muted">@expense.date.Value.ToString("MMMM").ToUpper()</p><h6>@expense.date.Value.Day</h6></td>
                                    <td><h6>@expense.name</h6><p class="text-muted">@expense.description</p></td>
                                    <td><p class="text-danger">-$@expense.amount</p><p class="text-muted">10:48PM</p></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
