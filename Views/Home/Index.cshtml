            <h4>Other Operations</h4>

            <div class="row" style="background:white;border-radius:8px;padding:10px;">
                <div class="col-sm-12">
                    <div class="row accBottom">
                        <div class="col-sm-6" style="color:#3880e0;">
                            My Deposits
                        </div>

                        <div class="col-sm-6" style="">
                            <a href="#" style="color:black;margin-left: 316px;" id="toggler1">
                                <img id="toggler1Image" src="~/Assets/add.png" style="width:25px;height:25px;" />
                            </a>
                        </div>
                        <div class="row" style="display:none;" id="depositTable">
                            <div class="col-sm-12">
                                <table class="table table-responsive" style="display:inline-table;">
                                    <tr style="color:dodgerblue;">
                                        <th>Date</th>
                                        <th>Concept</th>
                                        <th>Amount</th>
                                    </tr>

                                    @foreach (var deposit in Model.deposits)
                                    {
                                        <tr>
                                            <td style="color:dodgerblue;">@deposit.date.Value.Month/@deposit.date.Value.Day/@deposit.date.Value.Year</td>
                                            <td>@deposit.concept</td>
                                            <td style="color:#77CE05;">+$@deposit.amount</td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <div class="row accBottom">
                        <div class="col-sm-6" style="color:#3880e0;">
                            Loans
                        </div>

                        <div class="col-sm-6" style="">
                            <a href="#" style="color:black;    margin-left: 316px;" id="toggler2">
                                <img src="~/Assets/add.png" style="width:25px;height:25px;" />
                            </a>
                        </div>
                        <div class="row" style="display:none;" id="depositTableToggler2">
